long SumLoop( int n ) {
	  int i ;
	  long sum = 0 ;
	  for( i = 1 ; i <= n ; i++ ) {
		    sum += i ;
	  }//end for
	  return sum ;
}//end SumLoop

long SumRecur( int n ) {
	  if( n == 0 ) {
		    return 0 ;  
	  }//end if
	  return n + SumRecur( n - 1 ) ; 
}//end SumRecur function
