void TowerHanoi( int m, int i, int j ) {
	  if( m > 0 ) {
		    int k = 6 - i - j ; // k is rest pole
		    TowerHanoi( m - 1, i, k ) ; // Move from the source pole to the resting pole (Step 1)
		    printf( "Move disc %d from %d to %d\n", m, i, j ) ; // m is number of plates , i is source pole, j is destination pole (Step 2)
		    TowerHanoi( m - 1, k, j ) ; // Move the resting pole to the destination pole (Step 3)
	  }//end if
}//end TowerHanoi function
